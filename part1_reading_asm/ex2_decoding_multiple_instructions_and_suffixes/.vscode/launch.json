    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug main.lua (Always)",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "lua": "lua",
                "file": "${workspaceFolder}/main.lua"
            }
        },
        {
            "name": "Debug Current File",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "lua": "lua",
                "file": "${file}"
            }
        },
        {
            "name": "Debug Custom Lua Environment",
            "type": "lua-local",
            "request": "launch",
            "program": {
                "command": "command"
            },
            "args": []
        }
    ]
}